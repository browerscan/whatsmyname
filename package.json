    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "5.1.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "glob": "11.1.0",
    "jsdom": "27.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "4.20.6",
    "typescript": "^5",
    "vitest": "4.0.9",
    "wrangler": "4.54.0"
