{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:cloudflare": "npx @opennextjs/cloudflare",
    "preview:cloudflare": "wrangler dev",
    "deploy:cloudflare": "npm run build && npm run build:cloudflare && wrangler deploy",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "playwright:install": "playwright install",
    "i18n:scan": "tsx scripts/i18n-scanner.ts",
    "i18n:scan:suggest": "tsx scripts/i18n-scanner.ts --suggest",
    "i18n:validate": "tsx scripts/i18n-scanner.ts --validate",
    "test:i18n": "vitest run scripts/i18n-validator.test.ts",
    "test:i18n:watch": "vitest watch scripts/i18n-validator.test.ts",
    "test:i18n:ui": "vitest --ui scripts/i18n-validator.test.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-separator": "1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tabs": "1.1.13",
    "@tanstack/react-virtual": "3.13.13",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.553.0",
    "next": "16.0.10",
    "next-intl": "4.6.0",
    "next-themes": "0.4.6",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "4.1.13",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "16.0.10",
    "@opennextjs/cloudflare": "1.14.7",
    "@playwright/test": "1.56.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "6.9.1",
